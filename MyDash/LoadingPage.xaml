<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MyDash.LoadingPage"
    x:ClassModifier="internal"
    Loaded="OnLoaded">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
        <ActivityIndicator IsRunning="True" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" />
        <Label Text="Loading..." HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>
